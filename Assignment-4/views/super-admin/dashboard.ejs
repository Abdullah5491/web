<div class="container mt-4">
    <h2>Admin Dashboard</h2>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Total Products</div>
                <div class="card-body">
                    <h3 class="card-title">
                        <%= totalProducts %>
                    </h3>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">Products by Category</div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% productsByCategory.forEach(cat=> { %>
                                <tr>
                                    <td>
                                        <%= cat._id || 'Uncategorized' %>
                                    </td>
                                    <td>
                                        <%= cat.count %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <h4>Quick Actions</h4>
            <a href="/super-admin/products/create" class="btn btn-success me-2">
                <i class="bi bi-plus-lg"></i> Add New Product
            </a>
            <a href="/super-admin/products" class="btn btn-primary">
                <i class="bi bi-list"></i> View All Products
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="bi bi-house"></i> Visit Main Site
            </a>
        </div>
    </div>
</div>