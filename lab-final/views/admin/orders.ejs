<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title || 'Manage Orders' %> - E-Commerce Admin
    </title>

    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        .status-badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .status-pending {
            background: #fef3c7;
            color: #92400e;
        }

        .status-confirmed {
            background: #d1fae5;
            color: #065f46;
        }

        .status-cancelled {
            background: #fee2e2;
            color: #991b1b;
        }

        .action-btn {
            padding: 6px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.85rem;
            margin-right: 5px;
            text-decoration: none;
            display: inline-block;
        }

        .action-btn.confirm {
            background: #10b981;
            color: white;
        }

        .action-btn.cancel {
            background: #ef4444;
            color: white;
        }

        .action-btn:hover {
            opacity: 0.9;
        }

        .action-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
    </style>
</head>

<body class="admin-page">
    <div class="admin-wrapper">
        <%- include('partials/admin-sidebar') %>

            <div class="admin-main">
                <%- include('partials/admin-header') %>

                    <main class="admin-content">
                        <!-- Stats Cards -->
                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="stat-card-header">
                                    <span class="stat-card-title">Total Orders</span>
                                    <div class="stat-card-icon primary">
                                        <i class="fas fa-shopping-cart"></i>
                                    </div>
                                </div>
                                <div class="stat-card-value">
                                    <%= stats.total %>
                                </div>
                            </div>

                            <div class="stat-card">
                                <div class="stat-card-header">
                                    <span class="stat-card-title">Pending</span>
                                    <div class="stat-card-icon warning">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                </div>
                                <div class="stat-card-value">
                                    <%= stats.pending %>
                                </div>
                            </div>

                            <div class="stat-card">
                                <div class="stat-card-header">
                                    <span class="stat-card-title">Confirmed</span>
                                    <div class="stat-card-icon success">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                </div>
                                <div class="stat-card-value">
                                    <%= stats.confirmed %>
                                </div>
                            </div>

                            <div class="stat-card">
                                <div class="stat-card-header">
                                    <span class="stat-card-title">Revenue</span>
                                    <div class="stat-card-icon primary">
                                        <i class="fas fa-dollar-sign"></i>
                                    </div>
                                </div>
                                <div class="stat-card-value">$<%= stats.totalRevenue.toFixed(2) %>
                                </div>
                            </div>
                        </div>

                        <!-- Orders Table -->
                        <div class="admin-table-container">
                            <div class="admin-table-header">
                                <h3 class="admin-table-title">All Orders (<%= orders.length %>)</h3>
                            </div>

                            <% if (orders.length> 0) { %>
                                <table class="admin-table">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer Name</th>
                                            <th>Email</th>
                                            <th>Items</th>
                                            <th>Total Amount</th>
                                            <th>Status</th>
                                            <th>Order Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(order=> { %>
                                            <tr>
                                                <td><code><%= order._id.toString().slice(-8) %></code></td>
                                                <td><strong>
                                                        <%= order.customerName %>
                                                    </strong></td>
                                                <td>
                                                    <%= order.email %>
                                                </td>
                                                <td>
                                                    <%= order.items.length %> item(s)
                                                </td>
                                                <td><strong>$<%= order.totalAmount.toFixed(2) %></strong></td>
                                                <td>
                                                    <span class="status-badge status-<%= order.status.toLowerCase() %>">
                                                        <%= order.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <%= new Date(order.createdAt).toLocaleDateString() %>
                                                </td>
                                                <td>
                                                    <% if (order.status==='Pending' ) { %>
                                                        <form method="POST"
                                                            action="/admin/orders/<%= order._id %>/confirm"
                                                            style="display: inline;">
                                                            <button type="submit" class="action-btn confirm">
                                                                <i class="fas fa-check"></i> Confirm
                                                            </button>
                                                        </form>
                                                        <form method="POST"
                                                            action="/admin/orders/<%= order._id %>/cancel"
                                                            style="display: inline;">
                                                            <button type="submit" class="action-btn cancel">
                                                                <i class="fas fa-times"></i> Cancel
                                                            </button>
                                                        </form>
                                                        <% } else { %>
                                                            <span style="color: #9ca3af; font-size: 0.85rem;">
                                                                <%= order.status==='Confirmed' ? 'Order completed'
                                                                    : 'Order cancelled' %>
                                                            </span>
                                                            <% } %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <div style="padding: 3rem; text-align: center; color: #6b7280;">
                                        <i class="fas fa-inbox"
                                            style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.3;"></i>
                                        <p style="font-size: 1.1rem;">No orders yet</p>
                                    </div>
                                    <% } %>
                        </div>
                    </main>

                    <%- include('partials/admin-footer') %>
            </div>
    </div>

    <script src="/js/admin.js"></script>
</body>

</html>